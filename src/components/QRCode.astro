---
import { QR } from "qr-svg";
import Card from "./Card.astro";

export interface Props {
  title?: string;
  data: string;
}

const { title, data } = Astro.props;

const qr = (data: string) => QR(data).replace("viewBox=", 'width="100%" height="100%" viewBox=')
---

<Card title={title} clazz="h-35">
  <Fragment set:html={qr(data)} />
</Card>
