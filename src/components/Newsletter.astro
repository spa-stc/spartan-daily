---
import Google from "../utils/google";
import Card from "./Card.astro";
import QRCode from "qrcode";

const newsletter = await QRCode.toDataURL(
  (await Google.getNewsletter()),
  {
    type: 'image/webp',
    margin: 0,
  }
)

---

<Card title="Student Newsletter">
  <img src={newsletter} />
</Card>
